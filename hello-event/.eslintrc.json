{
    "extends": ["airbnb", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "jest": true
    },
    "ignorePatterns": ["node_modules/"],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-one-expression-per-line" : "off",
        "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }]
    }
}